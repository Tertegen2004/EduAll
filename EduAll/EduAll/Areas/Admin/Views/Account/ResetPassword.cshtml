
@model ResetPassword_vm

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_main";
}

<section class="auth d-flex">
    <div class="auth-left bg-main-50 flex-center p-24">
        <img src="/Admin/assets/images/thumbs/auth-img3.png" alt="Reset Password Image">
    </div>
    <div class="auth-right py-40 px-24 flex-center flex-column">
        <div class="auth-right__inner mx-auto w-100">
            <a asp-controller="Home" asp-action="Index" class="auth-right__logo">
                <img src="/Admin/assets/images/logo/logo.png" alt="Logo">
            </a>
            <h2 class="mb-8">Reset Password</h2>

            <p class="text-gray-600 text-15 mb-32">
                For <span class="fw-medium text-main-600"> @Model.Email </span>
            </p>

            <form asp-action="ResetPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Email" />

                <div class="mb-24">
                    <label asp-for="NewPassword" class="form-label mb-8 h6">New Password</label>
                    <div class="position-relative">
                        <input asp-for="NewPassword" type="password" class="form-control py-11 ps-40 password-input" placeholder="Enter New Password">
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-lock"></i></span>
                        <span class="toggle-password position-absolute top-50 inset-inline-end-0 me-16 translate-middle-y text-gray-600 cursor-pointer">
                            <i class="ph ph-eye-slash" id="toggleIcon"></i>
                        </span>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger text-sm"></span>
                </div>

                <div class="mb-24">
                    <label asp-for="ConfirmPassword" class="form-label mb-8 h6">Confirm Password</label>
                    <div class="position-relative">
                        <input asp-for="ConfirmPassword" type="password" class="form-control py-11 ps-40 password-input-confirm" placeholder="Confirm Password">
                        <span class="position-absolute top-50 translate-middle-y ms-16 text-gray-600 d-flex"><i class="ph ph-lock"></i></span>
                        <span class="toggle-password-confirm position-absolute top-50 inset-inline-end-0 me-16 translate-middle-y text-gray-600 cursor-pointer">
                            <i class="ph ph-eye-slash" id="toggleIconConfirm"></i>
                        </span>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger text-sm"></span>
                </div>

                <button type="submit" class="btn btn-main rounded-pill w-100">Set New Password</button>

                <a asp-action="signin" class="mt-24 text-main-600 flex-align gap-8 justify-content-center hover-text-decoration-underline">
                    <i class="ph ph-arrow-left d-flex"></i> Back To Login
                </a>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {

            // 1. Toggle New Password
            $(".toggle-password").click(function () {
                var input = $(".password-input");
                var icon = $("#toggleIcon");

                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                    icon.removeClass("ph-eye-slash").addClass("ph-eye");
                } else {
                    input.attr("type", "password");
                    icon.removeClass("ph-eye").addClass("ph-eye-slash");
                }
            });

            // 2. Toggle Confirm Password
            $(".toggle-password-confirm").click(function () {
                var input = $(".password-input-confirm");
                var icon = $("#toggleIconConfirm");

                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                    icon.removeClass("ph-eye-slash").addClass("ph-eye");
                } else {
                    input.attr("type", "password");
                    icon.removeClass("ph-eye").addClass("ph-eye-slash");
                }
            });

        });
    </script>
}