@model Pagination<Course_vm>

@{
    ViewData["Title"] = "All Courses";
}

<div class="dashboard-body">
    <partial name="_Notification" />

    <div class="breadcrumb-with-buttons mb-24 flex-between flex-wrap gap-8">
        <div class="breadcrumb mb-24">
            <ul class="flex-align gap-4">
                <li><a asp-controller="Home" asp-action="Index" class="text-gray-200 fw-normal text-15 hover-text-main-600">Home</a></li>
                <li> <span class="text-gray-500 fw-normal d-flex"><i class="ph ph-caret-right"></i></span> </li>
                <li><span class="text-main-600 fw-normal text-15">Courses</span></li>
            </ul>
        </div>

        <div class="flex-align gap-16 flex-wrap">
            <div class="position-relative flex-grow-1 max-w-300">
                <form asp-action="Index" method="get">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                           class="form-control ps-48 py-12 rounded-pill border-gray-100 focus-border-main-600"
                           placeholder="Search course..." onchange="this.form.submit()"> <span class="position-absolute top-50 start-0 translate-middle-y ms-20 text-gray-400 text-xl d-flex">
                        <i class="ph ph-magnifying-glass"></i>
                    </span>
                </form>
            </div>

            <a asp-action="CreateCourse" class="btn btn-main rounded-pill py-10 px-24 flex-align gap-8 fw-bold">
                <i class="ph ph-plus text-xl"></i> Create Course
            </a>
        </div>
    </div>

    <div class="card overflow-hidden border-0 shadow-sm rounded-16">
        <div class="card-body p-0 overflow-x-auto">
            <table id="courseTable" class="table table-hover align-middle mb-0">
                <thead class="bg-gray-50 text-center">
                    <tr>
                        <th class="h6 text-gray-500 text-14 fw-semibold py-16 text-start ps-24">Course Name</th>
                        <th class="h6 text-gray-500 text-14 fw-semibold py-16">Instructor</th>
                        <th class="h6 text-gray-500 text-14 fw-semibold py-16">Category</th>
                        <th class="h6 text-gray-500 text-14 fw-semibold py-16">Price</th>
                        <th class="h6 text-gray-500 text-14 fw-semibold py-16">Lessons</th>
                        <th class="h6 text-gray-500 text-14 fw-semibold py-16">Status</th>
                        <th class="h6 text-gray-500 text-14 fw-semibold py-16 text-end pe-24">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center" id="courseTableBody">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var course in Model)
                        {
                            <tr class="transition-1">
                                <td class="text-start ps-24">
                                    <div class="flex-align gap-12">
                                        <div class="w-60 h-40 rounded-8 overflow-hidden border border-gray-100 flex-shrink-0" style="max-width: 60px;">
                                            <img src="@(string.IsNullOrEmpty(course.ImgUrl) ? "/Admin/assets/images/thumbs/course-img1.png" : course.ImgUrl)"
                                                 alt="Course" class="w-100 h-100 object-fit-cover">
                                        </div>
                                        <div class="d-flex flex-column">
                                            <span class="h6 mb-0 fw-semibold text-heading text-15 search-title text-line-1" style="max-width: 200px;" title="@course.Title">
                                                @course.Title
                                            </span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-13 fw-medium text-gray-600 bg-gray-50 px-8 py-4 rounded-pill search-instructor">
                                        <i class="ph-fill ph-user me-1"></i> @course.InstructorName
                                    </span>
                                </td>
                                <td>
                                    <span class="text-14 fw-medium text-main-600 search-category">@course.CategoryName</span>
                                </td>
                                <td>
                                    <span class="fw-bold text-heading">$@course.Price</span>
                                </td>
                                <td>
                                    <span class="py-4 px-12 rounded-pill bg-gray-100 text-gray-600 fw-bold text-13 border border-gray-200">
                                        @course.LessonsCount
                                    </span>
                                </td>
                                <td>
                                    @if (course.IsPublished)
                                    {
                                        <span class="text-13 py-4 px-12 bg-success-50 text-success-600 rounded-pill fw-medium border border-success-100">Published</span>
                                    }
                                    else
                                    {
                                        <span class="text-13 py-4 px-12 bg-warning-50 text-warning-600 rounded-pill fw-medium border border-warning-100">Draft</span>
                                    }
                                </td>
                                <td class="text-end pe-24">
                                    <div class="flex-align gap-8 justify-content-end">

                                        <a asp-action="CourseContent" asp-route-courseId="@course.Id"
                                           class="btn btn-outline-main rounded-pill py-2 px-14 text-13 fw-bold hover-bg-main-600 hover-text-white"
                                           title="Manage Videos & Quizzes">
                                            Manage
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@course.Id"
                                           class="w-32 h-32 bg-gray-50 text-gray-600 rounded-circle flex-center hover-bg-main-50 hover-text-main-600 transition-2 border border-gray-100"
                                           title="Edit Details" data-bs-toggle="tooltip">
                                            <i class="ph ph-pencil-simple text-lg"></i>
                                        </a>

                                        <form asp-action="Delete" method="post" asp-route-id="@course.Id" class="d-inline">
                                            <button type="submit"
                                                    class="w-32 h-32 bg-danger-50 text-danger-600 rounded-circle flex-center hover-bg-danger-600 hover-text-white transition-2 border-0"
                                                    title="Delete Course" data-bs-toggle="tooltip"
                                                    onclick="return confirm('Are you sure you want to delete this course? This cannot be undone!');">
                                                <i class="ph ph-trash text-lg"></i>
                                            </button>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-40">
                                <div class="text-center">
                                    <div class="w-60 h-60 bg-gray-50 rounded-circle flex-center mx-auto text-gray-400 text-4xl mb-16">
                                        <i class="ph ph-video-camera-slash"></i>
                                    </div>
                                    <h6 class="text-gray-500">No courses found.</h6>
                                </div>
                            </td>
                        </tr>
                    }

                    <tr id="noResultsRow" style="display: none;">
                        <td colspan="7" class="text-center py-40">
                            <h6 class="text-gray-500">No matching courses found.</h6>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>


        <div class="card-footer border-top border-gray-100 py-16 px-24 flex-between flex-wrap gap-16">

            <span class="text-gray-500 text-15">
                Showing @((Model.PageIndex - 1) * 5 + 1) to @Math.Min(Model.PageIndex * 5, Model.TotalItems) of @Model.TotalItems entries
            </span>

            <ul class="pagination flex-align flex-wrap gap-8">

                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       class="page-link h-36 w-36 flex-center text-14 rounded-8 fw-medium bg-gray-50 text-gray-600 hover-bg-main-50">
                        <i class="ph ph-caret-left"></i>
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a asp-action="Index"
                           asp-route-pageNumber="@i"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           class="page-link h-36 w-36 flex-center text-14 rounded-8 fw-medium @(i == Model.PageIndex ? "bg-main-600 border-main-600 text-white" : "bg-gray-50 text-gray-600 hover-bg-main-50")">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a asp-action="Index"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-searchString="@ViewData["CurrentFilter"]"
                       class="page-link h-36 w-36 flex-center text-14 rounded-8 fw-medium bg-gray-50 text-gray-600 hover-bg-main-50">
                        <i class="ph ph-caret-right"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // 1. Alert Animation
            $(".alert").fadeIn(600);
            window.setTimeout(function () {
                $(".alert").fadeTo(500, 0).slideUp(500, function () { $(this).remove(); });
            }, 2000);

            // 2. Tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) { return new bootstrap.Tooltip(tooltipTriggerEl) })

            // 3. Live Search (مطور للبحث عن المدرب والكاتيجوري كمان)
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                var hasVisibleRows = false;

                $("#courseTableBody tr:not(#noResultsRow)").filter(function () {
                    // بنجمع النصوص من العنوان، اسم المدرب، واسم القسم
                    var title = $(this).find(".search-title").text().toLowerCase();
                    var instructor = $(this).find(".search-instructor").text().toLowerCase();
                    var category = $(this).find(".search-category").text().toLowerCase();

                    // لو أي واحد فيهم فيه الكلام اللي كتبته، اظهر الصف
                    var isVisible = title.indexOf(value) > -1 || instructor.indexOf(value) > -1 || category.indexOf(value) > -1;
                    $(this).toggle(isVisible);

                    if (isVisible) hasVisibleRows = true;
                });

                if (!hasVisibleRows && value.length > 0) { $("#noResultsRow").show(); }
                else { $("#noResultsRow").hide(); }
            });
        });
    </script>
}