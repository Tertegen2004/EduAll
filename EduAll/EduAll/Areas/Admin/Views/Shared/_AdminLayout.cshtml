    @{
    // 1. الحصول على اسم الكنترولر والأكشن الحاليين
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();

    // دالة مساعدة لتحديد ما إذا كان الرابط نشطاً
        // دالة مساعدة لتحديد ما إذا كان الرابط نشطاً
        string IsActive(string controller, string action = null)
        {
            if (string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase))
            {
                if (action == null || string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase))
                {
                    // ✅ التعديل: غيرنا active لـ activePage عشان تطابق الـ CSS
                    return "activePage";
                }
            }
            return "";
        }

        // دالة القوائم المنسدلة (تفضل زي ما هي active open لأن ده كلاس للجافاسكريبت مش للستايل بس)
