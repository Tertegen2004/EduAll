                    xaxis: {
                        labels: {
                            show: false,
                        },
                        categories: [
                            `Jan`,
                            `Feb`,
                            `Mar`,
                            `Apr`,
                            `May`,
                            `Jun`,
                            `Jul`,
                            `Aug`,
                            `Sep`,
                            `Oct`,
                            `Nov`,
                            `Dec`,
                        ],
                        tooltip: {
