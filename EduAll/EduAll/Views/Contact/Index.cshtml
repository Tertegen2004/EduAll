@using EduAll.ViewModel
@model Contact_vm
@{
    ViewData["Title"] = "Contact Us";
    Layout = "_Layout";
}

<section class="contact py-120">
    <div class="container">
        <div class="section-heading text-center">
            <div class="flex-align d-inline-flex gap-8 mb-16">
                <span class="text-main-600 text-2xl d-flex">
                    <i class="ph-bold ph-book"></i>
                </span>
                <h5 class="text-main-600 mb-0">Get In Touch</h5>
            </div>
            <h2 class="mb-24">Let us help you</h2>
            <p class="">
                Our platform is built on the principles of innovation, quality, and
                inclusivity, aiming to provide a seamless learning experience.
            </p>
        </div>

        <div class="row gy-4">
            <div class="col-xl-4 col-md-6">
                <div class="contact-item bg-main-25 border border-neutral-30 rounded-12 px-32 py-40 d-flex align-items-start gap-24 hover-bg-main-600 transition-2 hover-border-main-600 group">
                    <span class="contact-item__icon w-60 h-60 text-32 flex-center rounded-circle bg-main-600 text-white flex-shrink-0 transition-2">
                        <i class="ph ph-map-pin-line"></i>
                    </span>
                    <div class="flex-grow-1">
                        <h4 class="mb-12 transition-2">Main Office</h4>
                        <p class="text-neutral-500 transition-2">2972 Westheimer Rd. Santa Ana, Illinois 85486</p>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="contact-item bg-main-25 border border-neutral-30 rounded-12 px-32 py-40 d-flex align-items-start gap-24 hover-bg-main-600 transition-2 hover-border-main-600 group">
                    <span class="contact-item__icon w-60 h-60 text-32 flex-center rounded-circle bg-main-600 text-white flex-shrink-0 transition-2">
                        <i class="ph ph-envelope-open"></i>
                    </span>
                    <div class="flex-grow-1">
                        <h4 class="mb-12 transition-2">Email Address</h4>
                        <p class="text-neutral-500 transition-2">info@eduall.com</p>
                        <p class="text-neutral-500 transition-2">support@eduall.com</p>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="contact-item bg-main-25 border border-neutral-30 rounded-12 px-32 py-40 d-flex align-items-start gap-24 hover-bg-main-600 transition-2 hover-border-main-600 group">
                    <span class="contact-item__icon w-60 h-60 text-32 flex-center rounded-circle bg-main-600 text-white flex-shrink-0 transition-2">
                        <i class="ph ph-phone-call"></i>
                    </span>
                    <div class="flex-grow-1">
                        <h4 class="mb-12 transition-2">Phone Number</h4>
                        <p class="text-neutral-500 transition-2">(505) 555-0125</p>
                        <p class="text-neutral-500 transition-2">(406) 555-0120</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-form-section py-120 bg-main-25 position-relative z-1">
    <img src="~/assets/images/bg/wave-bg.png" alt="" class="position-absolute top-0 start-0 w-100 h-100 z-n1 d-lg-block d-none" />

    <div class="container">
        <div class="row gy-5 align-items-center">

            <div class="col-xl-7 col-lg-6 pe-lg-5">
                <div class="mb-40 md-xl-5">
                    <div class="flex-align d-inline-flex gap-8 mb-16">
                        <span class="text-main-600 text-2xl d-flex"><i class="ph-bold ph-book"></i></span>
                        <h5 class="text-main-600 mb-0">Contact Us</h5>
                    </div>
                    <h2 class="mb-24">Have questions? don't hesitate to contact us</h2>
                    <p class="text-neutral-500 text-line-3 max-w-636">
                        We are passionate about transforming lives through education. Founded with a vision to make learning accessible to all.
                    </p>
                </div>

                <div class="flex-align gap-40 flex-wrap">
                    <div class="enrolled-students mt-12 d-block">
                        <img src="~/assets/images/thumbs/user-img1.png" class="w-48 h-48 rounded-circle object-fit-cover border border-white ms-n16" alt="" />
                        <img src="~/assets/images/thumbs/user-img1.png" class="w-48 h-48 rounded-circle object-fit-cover border border-white ms-n16" alt="" />
                        <img src="~/assets/images/thumbs/user-img1.png" class="w-48 h-48 rounded-circle object-fit-cover border border-white ms-n16" alt="" />
                        <span class="w-48 h-48 rounded-circle bg-main-600 text-white flex-center text-sm border border-white ms-n16 fw-bold">+2k</span>
                    </div>
                    <div class="">
                        <ul class="flex-align gap-4 mb-10">
                            <li class="text-warning-600 text-2xl d-flex"><i class="ph-fill ph-star"></i></li>
                            <li class="text-warning-600 text-2xl d-flex"><i class="ph-fill ph-star"></i></li>
                            <li class="text-warning-600 text-2xl d-flex"><i class="ph-fill ph-star"></i></li>
                            <li class="text-warning-600 text-2xl d-flex"><i class="ph-fill ph-star"></i></li>
                            <li class="text-warning-600 text-2xl d-flex"><i class="ph-fill ph-star-half"></i></li>
                        </ul>
                        <span class="text-neutral-700 fw-medium">4.95 of 5 (2.5k reviews)</span>
                    </div>
                </div>
            </div>

            <div class="col-xl-5 col-lg-6">
                <div class="p-24 bg-white rounded-12 box-shadow-md">
                    <div class="border border-neutral-30 rounded-8 bg-main-25 p-24">

                        <form asp-action="SendMessage" asp-controller="Contact" method="post">
                            <h4 class="mb-0">Send a Message</h4>
                            <span class="d-block border border-neutral-30 my-24 border-dashed"></span>

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success rounded-pill mb-24">
                                    <i class="ph-bold ph-check-circle me-2"></i> @TempData["SuccessMessage"]
                                </div>
                            }

                            <div class="mb-24">
                                <label class="text-neutral-700 text-lg fw-medium mb-12">Name</label>
                                <input asp-for="Name" class="common-input rounded-pill border-white bg-white focus-border-main-600" placeholder="Enter Name..." />
                                <span asp-validation-for="Name" class="text-danger text-sm mt-1 d-block"></span>
                            </div>

                            <div class="mb-24">
                                <label class="text-neutral-700 text-lg fw-medium mb-12">Email</label>
                                <input asp-for="Email" class="common-input rounded-pill border-white bg-white focus-border-main-600" placeholder="Enter Email..." />
                                <span asp-validation-for="Email" class="text-danger text-sm mt-1 d-block"></span>
                            </div>

                            <div class="mb-24">
                                <label class="text-neutral-700 text-lg fw-medium mb-12">Phone</label>
                                <input asp-for="Phone" class="common-input rounded-pill border-white bg-white focus-border-main-600" placeholder="Enter Your Number..." />
                                <span asp-validation-for="Phone" class="text-danger text-sm mt-1 d-block"></span>
                            </div>

                            <div class="mb-24">
                                <label class="text-neutral-700 text-lg fw-medium mb-12">Message</label>
                                <textarea asp-for="Message" class="common-input rounded-16 border-white bg-white focus-border-main-600 h-110" placeholder="Enter Your Message..."></textarea>
                                <span asp-validation-for="Message" class="text-danger text-sm mt-1 d-block"></span>
                            </div>

                            <div class="mb-0">
                                <button type="submit" class="btn btn-main rounded-pill flex-center gap-8 w-100">
                                    Send Message <i class="ph-bold ph-paper-plane-right text-lg"></i>
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- ====================== Contact Form Section End ========================= -->
<!-- ================================= Certificate Section Start ================================= -->
<div class="certificate">
    <div class="container container--lg">
        <div class="certificate-box px-16 bg-main-600 rounded-16">
            <div class="container">
                <div class="position-relative py-80">
                    <div class="row align-items-center">
                        <div class="col-xl-6">
                            <div class="certificate__content">
                                <div class="flex-align gap-8 mb-16 wow bounceInDown">
                                    <span class="w-8 h-8 bg-white rounded-circle"></span>
                                    <h5 class="text-white mb-0">Get Certificate</h5>
                                </div>
                                <h2 class="text-white mb-40 fw-medium wow bounceIn">
                                    Get Quality Skills Certificate From the EduAll
                                </h2>
                                <a asp-action="index" asp-controller="course"
                                   class="btn btn-white rounded-pill flex-align d-inline-flex gap-8 hover-bg-main-800 wow bounceInUp">
                                    Get Started Now
                                    <i class="ph-bold ph-arrow-up-right d-flex text-lg"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-6 d-xl-block d-none">
                            <div class="certificate__thumb" data-aos="fade-up-left">
                                <img src="assets/images/thumbs/certificate-img.png"
                                     alt=""
                                     data-tilt
                                     data-tilt-max="8"
                                     data-tilt-speed="500"
                                     data-tilt-perspective="5000"
                                     data-tilt-full-page-listening />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ================================= Certificate Section End ================================= -->