@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center gap-2" role="alert" style="display:none;">
        <i class="ph-fill ph-check-circle text-xl"></i>
        <span class="fw-bold">Success:</span> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center gap-2" role="alert" style="display:none;">
        <i class="ph-fill ph-warning-circle text-xl"></i>
        <span class="fw-bold">Error:</span> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

